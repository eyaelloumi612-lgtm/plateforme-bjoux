@model JewelryManagementPlatform.Controllers.DashboardStats

@{
    ViewData["Title"] = "Accueil";
}

<div class="dashboard-container">
    <!-- Header avec bannière -->
    <div class="dashboard-header">
        <div class="header-content">
            <h1 class="display-4">Plateforme de Gestion de Bijoux</h1>
            <p class="lead">Bienvenue sur votre solution complète de gestion bijoutière</p>
            <div class="header-stats">
                <span class="stat-badge"><i class="fas fa-users"></i> @Model.TotalClients Clients</span>
                <span class="stat-badge"><i class="fas fa-gem"></i> @Model.TotalProducts Produits</span>
                <span class="stat-badge"><i class="fas fa-shopping-cart"></i> @Model.TotalCommandes Commandes</span>
            </div>
        </div>
        <div class="header-graphic">
            <i class="fas fa-gem fa-4x"></i>
        </div>
    </div>

    <!-- Cartes de statistiques -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon clients">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <h3>Clients</h3>
                <div class="stat-number">@Model.TotalClients</div>
                <p>Clients enregistrés</p>
                <a asp-controller="Clients" asp-action="Index" class="stat-link">
                    Voir détails <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon products">
                <i class="fas fa-gem"></i>
            </div>
            <div class="stat-content">
                <h3>Produits</h3>
                <div class="stat-number">@Model.TotalProducts</div>
                <p>Articles en catalogue</p>
                <a asp-controller="Products" asp-action="Index" class="stat-link">
                    Voir détails <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon orders">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="stat-content">
                <h3>Commandes</h3>
                <div class="stat-number">@Model.TotalCommandes</div>
                <p>Commandes traitées</p>
                <a asp-controller="Commandes" asp-action="Index" class="stat-link">
                    Voir détails <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon revenue">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-content">
                <h3>Revenu Total</h3>
                <div class="stat-number">@Model.TotalRevenue.ToString("0.00") DT</div>
                <p>Chiffre d'affaires</p>
                <a asp-controller="Factures" asp-action="Index" class="stat-link">
                    Voir détails <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Section d'actions rapides -->
    <div class="quick-actions">
        <h2 class="section-title">Actions Rapides</h2>
        <div class="actions-grid">
            <a asp-controller="Clients" asp-action="Create" class="action-btn">
                <i class="fas fa-user-plus"></i>
                <span>Nouveau Client</span>
            </a>
            <a asp-controller="Products" asp-action="Create" class="action-btn">
                <i class="fas fa-plus-circle"></i>
                <span>Nouveau Produit</span>
            </a>
            <a asp-controller="Commandes" asp-action="Create" class="action-btn">
                <i class="fas fa-file-invoice"></i>
                <span>Nouvelle Commande</span>
            </a>
            <a asp-controller="Factures" asp-action="Create" class="action-btn">
                <i class="fas fa-receipt"></i>
                <span>Nouvelle Facture</span>
            </a>
        </div>
    </div>

    

<style>
    /* Variables CSS */
    :root {
        --primary-color: #d4af37;
        --secondary-color: #b08d57;
        --accent-color: #8b4513;
        --text-dark: #2c3e50;
        --text-light: #7f8c8d;
        --bg-light: #f8f9fa;
        --card-shadow: 0 10px 30px rgba(0,0,0,0.1);
        --transition: all 0.3s ease;
    }

    .dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header */
    .dashboard-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: var(--card-shadow);
    }

    .header-content h1 {
        font-weight: 700;
        margin-bottom: 10px;
        font-size: 2.5rem;
    }

    .header-content .lead {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 20px;
    }

    .stat-badge {
        background: rgba(255,255,255,0.2);
        padding: 8px 15px;
        border-radius: 20px;
        margin-right: 10px;
        font-size: 0.9rem;
    }

    .header-graphic {
        opacity: 0.8;
    }

    /* Grid des statistiques */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: var(--card-shadow);
        transition: var(--transition);
        display: flex;
        align-items: center;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        font-size: 1.5rem;
    }

        .stat-icon.clients {
            background: rgba(52, 152, 219, 0.1);
            color: #3498db;
        }

        .stat-icon.products {
            background: rgba(155, 89, 182, 0.1);
            color: #9b59b6;
        }

        .stat-icon.orders {
            background: rgba(46, 204, 113, 0.1);
            color: #2ecc71;
        }

        .stat-icon.revenue {
            background: rgba(241, 196, 15, 0.1);
            color: #f1c40f;
        }

    .stat-content h3 {
        color: var(--text-dark);
        margin-bottom: 5px;
        font-size: 1.1rem;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 5px;
    }

    .stat-content p {
        color: var(--text-light);
        margin-bottom: 10px;
        font-size: 0.9rem;
    }

    .stat-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: var(--transition);
    }

        .stat-link:hover {
            color: var(--secondary-color);
        }

    /* Actions rapides */
    .quick-actions {
        margin-bottom: 40px;
    }

    .section-title {
        color: var(--text-dark);
        margin-bottom: 20px;
        font-weight: 600;
        font-size: 1.5rem;
    }

    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .action-btn {
        background: white;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        text-decoration: none;
        color: var(--text-dark);
        transition: var(--transition);
        box-shadow: var(--card-shadow);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

        .action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            color: var(--primary-color);
        }

        .action-btn i {
            font-size: 1.5rem;
            color: var(--primary-color);
        }

        .action-btn span {
            font-weight: 600;
        }

    /* Statistiques avancées */
    .advanced-stats {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: var(--card-shadow);
    }

    .stats-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    .chart-container h3,
    .recent-activity h3 {
        color: var(--text-dark);
        margin-bottom: 20px;
        font-weight: 600;
    }

    .chart-placeholder {
        background: var(--bg-light);
        border-radius: 15px;
        padding: 40px;
        text-align: center;
        color: var(--text-light);
    }

    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .activity-item {
        display: flex;
        align-items: center;
        padding: 15px;
        background: var(--bg-light);
        border-radius: 10px;
        transition: var(--transition);
    }

        .activity-item:hover {
            background: #e8f4fc;
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        background: var(--primary-color);
        color: white;
    }

    .activity-content p {
        margin: 0;
        font-weight: 500;
        color: var(--text-dark);
    }

    .activity-content small {
        color: var(--text-light);
        font-size: 0.8rem;
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .stats-row {
            grid-template-columns: 1fr;
        }

        .dashboard-header {
            flex-direction: column;
            text-align: center;
            gap: 20px;
        }
    }

    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }

        .actions-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .stat-card {
            flex-direction: column;
            text-align: center;
        }

        .stat-icon {
            margin-right: 0;
            margin-bottom: 15px;
        }
    }

    @@media (max-width: 480px) {
        .actions-grid {
            grid-template-columns: 1fr;
        }

        .header-stats {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .stat-badge {
            margin-right: 0;
            margin-bottom: 5px;
        }
    }
</style>