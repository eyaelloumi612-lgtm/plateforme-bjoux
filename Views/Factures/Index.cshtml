@model IEnumerable<JewelryManagementPlatform.Models.Facture>

@{
    ViewData["Title"] = "Factures";
}

<h1>Gestion des factures</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Créer une nouvelle facture</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Référence
            </th>
            <th>
                Commande
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFacturation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontantTTC)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Reference
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Commande.Reference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateFacturation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontantTTC) DT
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>