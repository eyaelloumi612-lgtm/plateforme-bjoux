@model JewelryManagementPlatform.Models.Client

@{
    ViewData["Title"] = "Détails du Client";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-user-circle me-2"></i>@ViewData["Title"]</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Modifier
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Retour
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h4 class="text-primary mb-4">Informations Personnelles</h4>

                <div class="row mb-3">
                    <div class="col-sm-3 fw-bold">Nom Complet:</div>
                    <div class="col-sm-9">@Model.NomComplet</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 fw-bold">Email:</div>
                    <div class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                        }
                        else
                        {
                            <span class="text-muted">Non renseigné</span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 fw-bold">Téléphone:</div>
                    <div class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Telephone))
                        {
                            <a href="tel:@Model.Telephone" class="text-decoration-none">@Model.Telephone</a>
                        }
                        else
                        {
                            <span class="text-muted">Non renseigné</span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 fw-bold">Adresse:</div>
                    <div class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Adresse))
                        {
                            @Model.Adresse
                        }
                        else
                        {
                            <span class="text-muted">Non renseignée</span>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <i class="fas fa-user fa-4x text-primary mb-3"></i>
                        <h5>Statistiques</h5>
                        <p class="text-muted">Informations à venir sur les commandes</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <h5 class="border-bottom pb-2">Historique des Commandes</h5>
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>L'historique des commandes sera affiché ici.
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Retour à la liste
    </a>
</div>