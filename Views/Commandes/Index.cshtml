@model IEnumerable<JewelryManagementPlatform.Models.Commande>

@{
    ViewData["Title"] = "Commandes";
}

<h1>Gestion des commandes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Créer une nouvelle commande</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Référence
            </th>
            <th>
                Client
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCommande)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Reference
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.NomComplet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCommande)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total) DT
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>